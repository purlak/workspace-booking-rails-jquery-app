
<h1>Add a new building/location</h1>
<%= render partial: "application/errors", locals: {errors: @building.errors} %>

<%= form_for @building, html: { class: "add-location" } do |f| %>
    <%= f.label :location_name %>
    <%= f.text_field :location_name%>

    <%= f.label :address %>
    <%= f.text_field :address%>
   
    <%= f.submit "Add Location", data: { disable_with: false}%>
<% end %>
<br/>

<h3> List of all Buildings/Locations</h3>

<% @buildings.each do |building|%>
    <ul>        
        <li>  
            <%= link_to building.location_name, building_path(building)%> - <%= building.address %>  
        </li>
    </ul>
<% end %>

<div class="loc"></div>

<br/>
<p><%= link_to "Go Back", user_path(@user.id) %></p>
